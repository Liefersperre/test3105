<Page x:Class="TestHR.Pages.SecondPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestHR.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SecondPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Grid.Row="1" Style="{DynamicResource MainBigButton}" Click="Schedule_Button_Click">Штатное расписание</Button>
        <Button Grid.Column="3" Grid.Row="1" Style="{DynamicResource MainBigButton}" Click="Staff_Button_Click">Сотрудники</Button>
        <Button Grid.Column="3" Grid.Row="3" Style="{DynamicResource MainBigButton}" Click="Vacancy_Button_Click">Вакансии</Button>
    </Grid>
</Page>
